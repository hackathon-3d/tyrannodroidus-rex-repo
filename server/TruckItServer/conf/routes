# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

# RESTFul User Services
GET         /user/:id            controllers.UserController.getUser(id: String)
POST        /user                controllers.UserController.createUser()

GET         /load                controllers.LoadController.getLoads(city: String, state: String)
POST        /load                controllers.LoadController.createLoad()
