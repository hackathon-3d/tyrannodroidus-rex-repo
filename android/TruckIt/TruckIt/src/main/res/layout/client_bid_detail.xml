<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ClientBidDetail">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bidder"
            android:id="@+id/bid_detail_bidder_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bidder Name"
            android:id="@+id/bid_detail_bidder_name"
            android:layout_below="@+id/bid_detail_bidder_label"
            android:layout_alignLeft="@+id/bid_detail_bidder_label"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$342"
            android:id="@+id/bid_detail_amount"
            android:layout_alignTop="@+id/bid_detail_bidder_label"
            android:layout_alignParentRight="true"
            android:textSize="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Comments"
            android:id="@+id/bid_detail_comments_label"
            android:layout_below="@+id/bid_detail_bidder_name"
            android:layout_alignLeft="@+id/bid_detail_bidder_name"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Comments"
            android:id="@+id/bid_detail_comments"
            android:layout_below="@+id/bid_detail_comments_label"
            android:layout_alignLeft="@+id/bid_detail_comments_label"
            android:layout_alignRight="@+id/bid_detail_amount"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Bid"
            android:id="@+id/button_accept_bid"
            android:layout_below="@+id/bid_detail_comments"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
