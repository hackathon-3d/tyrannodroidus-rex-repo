<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CreateJobActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            >

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="154dp"
                android:id="@+id/editText"
                android:layout_gravity="left|center_vertical"
                android:hint="A description of the work you need done."/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/create_job_start_input"
                android:layout_gravity="left|center_vertical"
                android:hint="Start Time"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/create_text_end_input"
                android:layout_gravity="left|center_vertical"
                android:hint="End Time"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:ems="10"
                    android:id="@+id/create_job_address"
                    android:hint="Address"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_job_state"
                    android:hint="State"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/create_job_address"
                    android:layout_toLeftOf="@+id/create_job_zip"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_job_city"
                    android:layout_below="@+id/create_job_address"
                    android:layout_alignParentLeft="true"
                    android:hint="City"
                    android:layout_alignBottom="@+id/create_job_state"
                    android:layout_toLeftOf="@+id/create_job_state"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_job_zip"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="true"
                    android:hint="ZIP"
                    android:layout_alignBaseline="@+id/create_job_city"
                    android:minWidth="80dp"/>
        </RelativeLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Load"
                android:id="@+id/button_create_load"
                android:layout_gravity="center"
                android:onClick="createLoad"/>
    </LinearLayout>

</RelativeLayout>
